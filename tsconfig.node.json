{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/common/**/*"],
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
